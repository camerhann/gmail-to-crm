{
  "manifest_version": 3,
  "name": "Gmail to BizDash CRM",
  "version": "1.0.0",
  "description": "Log Gmail emails to BizDash CRM - match contacts and track communications",
  "permissions": [
    "identity",
    "storage",
    "activeTab",
    "notifications"
  ],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://*.googleusercontent.com/*"
  ],
  "oauth2": {
    "client_id": "212342664004-qr3c5tqej10lh9882luuhggttqddder7.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/gmail.readonly",
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },
  "background": {
    "service_worker": "src/background/service-worker.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["src/content/gmail-integration.tsx"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "public/icons/icon16.png",
      "32": "public/icons/icon32.png",
      "48": "public/icons/icon48.png",
      "128": "public/icons/icon128.png"
    },
    "default_title": "Gmail to BizDash CRM"
  },
  "options_page": "src/options/options.html",
  "icons": {
    "16": "public/icons/icon16.png",
    "32": "public/icons/icon32.png",
    "48": "public/icons/icon48.png",
    "128": "public/icons/icon128.png"
  }
}
